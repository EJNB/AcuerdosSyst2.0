{% form_theme form 'form/fields.html.twig' %}
{% extends '::layout-admin.html.twig' %}

{% block content %}

    <div class="row">
        <h2 class="page-header">Crear Tema</h2>

        <div class="col-md-3">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Aceptar</button>
