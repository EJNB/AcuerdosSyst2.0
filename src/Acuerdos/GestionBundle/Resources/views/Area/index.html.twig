{% extends '::layout-admin.html.twig' %}

{% block content %}

    {% include "AcuerdosGestionBundle:Default:flash-message.html.twig" %}

        <h2 class="page-header">Areas</h2>

            <div class="count pull-left">
                Total de registros: <span class="badge">{{ pagination.getTotalItemCount }}</span>
            </div>
            {#<br>#}
            <table class="table table-hover table-condensed">
                <thead>
                <tr>
                    <th style="width: 5%">No</th>
                    <th style="width: 25%">{{ knp_pagination_sortable(pagination, 'Area', 'a.area') }}</th>
                    <th style="width: 25%">Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in pagination %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ entity.area }}</td>
                        <td>
                            <a href="{{ path('area_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span>Editar</a>
                            <a class="link-eliminar" href="javascript:void(0);"
                               data-url = "{{ path('area_delete', { 'id': entity.id }) }}"
                               data-descripcion="{#{{ entity.cargo }}#}"
                               data-toggle="modal" data-target="#modal-delete">
                                <span class="glyphicon glyphicon-trash"></span>Eliminar
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="3">
                        {{ include('AcuerdosGestionBundle:Default:paginator.html.twig') }}
                    </td>
                </tr>
                </tfoot>
            </table>

            <div class="list-actions">
                {% include "AcuerdosGestionBundle:Default:link-add.html.twig" with { url:'area_new' } %}
            </div>

    {% include "AcuerdosGestionBundle:Default:modals.html.twig" %}

{% endblock %}
